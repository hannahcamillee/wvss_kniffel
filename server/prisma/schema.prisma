// server/db/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       Int     @id @default(autoincrement())
  username String  @unique
  password String
  scores   Score[]
}

model Score {
  id     Int    @id @default(autoincrement())
  value  Int
  date   DateTime @default(now())
  user   User  @relation(fields: [userId], references: [id])
  userId Int
}
